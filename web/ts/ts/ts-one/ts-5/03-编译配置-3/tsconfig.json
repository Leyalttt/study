{
  "compilerOptions": {
    "target": "ES6",
    // "module": "ES6",
    "module": "AMD",
    //指定编译后的文件所在目录
    // "outDir": "./dist"

    //将编译的代码合并成一个文件, 此时module只能是AMD
    "outFile": "./dist/main.js",
    //是否对js文件进行编译
    // "allowJs": true,

    //检查js文件语法
    "checkJs": true,

    //在编译的时候是否删除注释
    // "removeComments": true

    //不生成编译后的文件
    "noEmit": true,

    // 当存在语法错误的时不生成编译后的文件
    "noEmitOnError": true

  }
}